{
  "name": "hintflow",
  "version": "1.0.0",
  "description": "A lightweight and easy-to-configure React library for creating dismissable in-app cues, helping you guide users through new features or important changes in a non-intrusive way.",
  "packageManager": "yarn@4.4.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/parthematics/hintflow.git"
  },
  "author": "parthematics <parthematics@gmail.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "component",
    "hint",
    "popup",
    "ui",
    "typescript"
  ],
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "watch": "yarn build && yarn start",
    "prepublishOnly": "yarn build",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check ."
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "rollup": "^4.20.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.5.4"
  }
}
